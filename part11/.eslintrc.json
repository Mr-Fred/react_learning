
{
  // VSCode: If you see schema errors, you can safely ignore them or remove schema associations in your settings.
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "ignorePatterns": ["dist/", "node_modules/"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}